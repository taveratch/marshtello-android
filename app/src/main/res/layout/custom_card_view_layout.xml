<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:id="@+id/relativeLayout4">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/tag_img"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:src="@drawable/red_tag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/card_count_txt"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="#3498DB" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView5"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/card_count_txt"
            android:src="@drawable/comment_icon_blue"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView5"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Name"
                android:id="@+id/card_name_txt"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tag_img"
                android:textColor="#474747"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February 21, 2016"
                android:id="@+id/preview_date_txt"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:layout_marginTop="3dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>